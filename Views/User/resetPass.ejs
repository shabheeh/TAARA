    <script>
        document.getElementById('reset-form').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            const isValid = validateReset();

            if (isValid) {
                document.getElementById('reset-form').submit(); // Submit the form if validation passes
            }
        });

        function validateReset() {
            const pass1 = document.getElementById('pass-1').value.trim();
            const pass2 = document.getElementById('pass-2').value.trim();
            const passError1 = document.getElementById('resetMessage-1');
            const passError2 = document.getElementById('resetMessage-2');

            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

            let isValid = true;

            // Reset error messages
            passError1.textContent = 'Enter new password';
            passError1.classList.remove('error-message');
            passError2.textContent = 'Re-enter password';
            passError2.classList.remove('error-message');

            // Validate first password
            if (!pass1) {
                passError1.textContent = 'Password is required';
                passError1.classList.add('error-message');
                isValid = false;
            } else if (!passwordRegex.test(pass1)) {
                passError1.textContent = 'Password must be at least 8 characters long and include a mix of uppercase and lowercase letters, numbers, and special characters';
                passError1.classList.add('error-message');
                isValid = false;
            }

            // Validate password confirmation
            if (pass1 !== pass2) {
                passError2.textContent = "Passwords don't match";
                passError2.classList.add('error-message');
                isValid = false;
            }

            return isValid;
        }
    </script>
    

