  const applyCouponBtn = document.getElementById('applyCouponBtn');
  const totalAmount =  document.getElementById('totalForCoupon')
  let validatedCoupon = null;

  // Function to validate coupon
  async function validateCoupon(couponCode, total) {
    try {
        const data = {
            couponCode : couponCode,
            total : total
        }
      const response = await fetch('/coupon', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.valid) {
        couponLabel.classList.remove('error-message');
        couponLabel.classList.add('success-message');
        couponLabel.innerHTML = `Coupon applied ${result.discountPercentage}% OFF`;
        checkoutCoupon.classList.remove('d-none');
        checkoutCouponValue.innerHTML = result.discountAmount;
        totalAmount.innerHTML = result.totalAfterDiscount
        validatedCoupon = result;  
        removeCouponBtn.classList.remove('d-none');
        applyCouponBtn.classList.add('d-none');
      } else {
        couponLabel.classList.add('error-message');
        couponLabel.classList.remove('success-message');
        couponLabel.innerHTML = result.message;
        checkoutCoupon.classList.add('d-none');
        totalAmount.innerHTML = result.originalAmount
        validatedCoupon = null;  
        removeCouponBtn.classList.add('d-none'); 
        applyCouponBtn.classList.remove('d-none');
      }

      return result.valid;
    } catch (error) {
      console.error('Error validating coupon:', error);
      couponLabel.classList.add('error-message');
      couponLabel.innerHTML = 'Error validating coupon';
      totalAmount.innerHTML = result.originalAmount 
