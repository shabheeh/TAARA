.cart-products {
    display: flex;
    flex-direction: column;
}

.cart-product {
    display: flex;
    margin-bottom: 10px;
}

.product-media-1 {
    margin-right: 20px;
}

.product-image {
    width: 70px; 
    height: 100px; 
}

.product-details {
    display: flex;
    flex-direction: column;
}

.error-message {
    color: red !important;
}

.success-message {
    color: green !important;
}

/* Hide default radio button */
input[type="radio"] {
    position: absolute;
    opacity: 0;
    cursor: pointer;
}

/* Style the custom radio button */
input[type="radio"] + label {
    position: relative;
    padding-left: 30px; /* Space for custom radio button */
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    font-size: 14px;
    color: #333; /* Adjust text color */
}

/* Custom radio button circle */
input[type="radio"] + label::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 15px;
    height: 15px;
    background: #fff; /* Background color */
    border: 1px solid #cd9967; /* Border color */
    border-radius: 50%;
    transform: translateY(-50%);
    transition: background 0.3s, border-color 0.3s;
}

/* Custom radio button checked state */
input[type="radio"]:checked + label::before {
    background: #ffffff; /* Background color when checked */
    border-color: #cd9967; /* Border color when checked */
}

/* Inner circle for checked state */
input[type="radio"]:checked + label::after {
    content: '';
    position: absolute;
    left: 3.5px;
    top: 50%;
    width: 8px;
    height: 8px;
    background: #cd9967; /* Inner circle color */
    border-radius: 50%;
    transform: translateY(-50%);
}



.hidden-coupon {
        display: none;
    }
