    margin: 0; /* Remove margin from heading */
}

.address-card {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px;
    margin-bottom: 10px;
    position: relative; /* Ensure relative positioning for positioning the options */
    display: flex; /* Flexbox for aligning items */
    align-items: center; /* Center align items vertically */
}

.address-card input[type="radio"] {
    margin-right: 10px; /* Add some space between radio button and label */
}

.address-details {
    flex: 1; /* Take up remaining space */
}

.edit-link {
    margin-left: auto; /* Move edit link to the right */
}

.edit-link a {
    text-decoration: none;
    color: #337ab7;
    cursor: pointer;
}

.edit-link a:hover {
    color: #23527c;
}

.add-address {
