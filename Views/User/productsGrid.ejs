<script>
    document.addEventListener('DOMContentLoaded', function() {
        const filterForm = document.getElementById('filter-form');
        const sortForm = document.getElementById('sort-form');
        const searchForm = document.getElementById('search-form');
        const sortItem = document.getElementById('sortProducts');
        const searchInput = document.getElementById('search');
        const paginationLinks = document.querySelectorAll('.pagination a.page-link');

        function updateURLParams() {
            const params = new URLSearchParams(new FormData(filterForm));

            if (sortItem.value) {
                params.set('sortProducts', sortItem.value);
            }

            if (searchInput.value.trim()) {
                params.set('search', searchInput.value.trim());
            }

            return params;
        }

        function handleFormChange() {
            const params = updateURLParams();
            const title = "<%= title %>";
            window.location.href = `/products/${title}?${params.toString()}`;
        }

        function handlePagination(event) {
            event.preventDefault();

            const page = event.target.getAttribute('data-page');
            const params = updateURLParams();
            params.set('page', page);

            const title = "<%= title %>";
            window.location.href = `/products/${title}?${params.toString()}`;
        }

        filterForm.addEventListener('change', handleFormChange);
        sortForm.addEventListener('change', handleFormChange);
        searchForm.addEventListener('submit', function(event) {
            event.preventDefault();
            handleFormChange();
        });

        paginationLinks.forEach(link => {
            link.addEventListener('click', handlePagination);
        });
    });
</script>



