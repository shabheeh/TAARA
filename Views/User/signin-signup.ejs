    <script>
        document.getElementById('signup-form').addEventListener('submit', function(event) {
            event.preventDefault();  
        
            const isValidsignup = validateSignup();
        
            if (isValidsignup) {
                document.getElementById('signup-form').submit(); // Submit the form if validation passes
            }
        });
        
        document.getElementById('signin-form').addEventListener('submit', function(event) {
            event.preventDefault(); 
        
            const isValidsignin = validateSignin();
        
            if (isValidsignin) {
                document.getElementById('signin-form').submit(); 
            }
        });
        
        function validateSignup() {
            const email = document.getElementById('register-email-2').value.trim();
            const password = document.getElementById('register-password-2').value.trim();
            const emailError = document.getElementById('signupMessageMail');
            const passwordError = document.getElementById('signupMessagePass');
        
            // Reset error messages
            emailError.textContent = 'Email address *';
            passwordError.textContent = 'Password *';
        
            const isEmailValid = validateEmail(email, emailError);
            const isPasswordValid = validateSignupPassword(password, passwordError);
        
            return isEmailValid && isPasswordValid; // Return the two results
        }
        
        function validateSignin() {
            const email = document.getElementById('signin-email-2').value.trim();
            const password = document.getElementById('signin-password-2').value.trim();
            const emailError = document.getElementById('signinMessageMail');
            const passwordError = document.getElementById('signinMessagePass');
        
            // Reset error messages
            emailError.textContent = 'Email address *';
            passwordError.textContent = 'Password *';
        
            const isEmailValid = validateEmail(email, emailError);
            const isPasswordValid = validateSigninPassword(password, passwordError);
        
            return isEmailValid && isPasswordValid; // Return the combined validation status
        }
        
        function validateEmail(email, emailError) {
            const emailRegex = /^([a-zA-Z0-9._]+)@([a-zA-Z0-9])+\.([a-z]+)(\.[a-z]+)?$/;
        
            if (!email) {
                emailError.textContent = 'Email is required';
                emailError.classList.add('error-message');
                return false;
            }
        
            if (!emailRegex.test(email)) {
                emailError.textContent = 'Invalid Email';
                emailError.classList.add('error-message');
                return false;
            }
        
            emailError.classList.remove('error-message');
            return true;
        }
        
        function validateSignupPassword(password, passwordError) {
            const passwordRegex = 	/^(?=.*[0-9]+.*)(?=.*[a-zA-Z]+.*)[0-9a-zA-Z]{6,}$/
        
            if (!password) {
                passwordError.textContent = 'Password is required';
                passwordError.classList.add('error-message');
                return false;
            }
        
            if (!passwordRegex.test(password)) {
                passwordError.textContent = 'Password must contain at least one letter, at least one number, and be longer than six charaters.';
                passwordError.classList.add('error-message');
                return false;
            }
        
            passwordError.classList.remove('error-message');
            return true;
        }
        
        function validateSigninPassword(password, passwordError) {
            if (!password) {
                passwordError.textContent = 'Password is required';
                passwordError.classList.add('error-message');
                return false;
            }
        
            passwordError.classList.remove('error-message');
            return true;
        }
