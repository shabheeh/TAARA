    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const forgotForm = document.getElementById('forgot-form');
            const emailInput = document.getElementById('forgot-email');
            const emailLabel = document.getElementById('forgotMessage');
    
            forgotForm.addEventListener('submit', function(event) {

                const isValid = validateForgot();
    
                if (!isValid) {
  
                    event.preventDefault(); // Prevent form submission if validation fails
                } else {
  
                }
            });
    
            function validateForgot() {
                const email = emailInput.value.trim();
                const emailRegex = /^([a-zA-Z0-9._]+)@([a-zA-Z0-9])+\.([a-z]+)(\.[a-z]+)?$/;
    
   
    
                if (!email) {
                    emailLabel.textContent = 'Email is required';
                    emailLabel.classList.add('text-danger');
                    return false;
                }
    
                if (!emailRegex.test(email)) {
                    emailLabel.textContent = 'Invalid Email';
                    emailLabel.classList.add('text-danger');
                    return false;
                }
    
                emailLabel.classList.remove('text-danger');
                emailLabel.textContent = 'Enter your registered email';
                return true;
            }
        });
    </script>

        
    
    

